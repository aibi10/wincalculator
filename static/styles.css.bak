body{
	background-color : black;
}

form{
	text-align : center;
}

.form-input{
	background-color: #E9E9E9;
	width: 300px;
	height: 30px;
	border-radius: 3px;
	border: 0;
	text-align: center;
	-webkit-box-shadow: inset 7px 3px 16px -10px rgba(0,0,0,0.75);
	-moz-box-shadow: inset 7px 3px 16px -10px rgba(0,0,0,0.75);
	box-shadow: inset 7px 3px 16px -10px rgba(0,0,0,0.75);
	margin-bottom: 15px;
}



.align-center{
	padding: 0 30px;
	margin : 50px;
}

.container-heading{ 
	text-align : center;
	font-size : 200%;
	background-color : #FF7F50;
}


.heading_first{
	color : maroon;
}

.second-row{
	background-color: #E9E9E9;
	width: 150px;
	height: 22px;
	border-radius: 3px;
	border: 0;
	text-align: center;
	-webkit-box-shadow: inset 7px 3px 16px -10px rgba(0,0,0,0.75);
	-moz-box-shadow: inset 7px 3px 16px -10px rgba(0,0,0,0.75);
	box-shadow: inset 7px 3px 16px -10px rgba(0,0,0,0.75);
	margin-bottom: 15px;
	margin : 30px;
}

.myButton {
	background-color:mediumseagreen;
	border-radius: 5px;
	display:inline-block;
	cursor:pointer;
	color:#ffffff;
	font-family:Arial;
	font-size:15px;
	font-weight:bold;
	padding:7px 30px;
	margin-top: 10px;
	text-decoration:none;
	transition: 0.5s ease-out;
}

.footer{
	background-color: #F08080;
	color: #000000;
	padding: 12px;
    text-align: center;
}

.re{
	background-color : pink;
	text-align : center;
	font-size : 150px;
}